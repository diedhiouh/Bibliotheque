{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}
    <h1 class="jumbotron">Livre</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ livre.titre }}</td>
            </tr>
            <tr>
                <th>Langue</th>
                <td>{{ livre.langue }}</td>
            </tr>
            <tr>
                <th>ISBN</th>
                <td>{{ livre.ISBN }}</td>
            </tr>
            <tr>
                <th>Annee</th>
                <td>{{ livre.annee }}</td>
            </tr>
            <tr>
                <th>Nbr_pages</th>
                <td>{{ livre.nbrPages }}</td>
            </tr>
            <tr>
                <th>Date_parution</th>
                <td>{{ livre.dateParution ? livre.dateParution|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Image_livre</th>
                <td>{{ livre.imageLivre }}</td>
            </tr>
            <tr>
                <th>Nbr_exemplaire</th>
                <td>{{ livre.nbrExemplaire }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('livre_index') }}">Liste des livres</a>

    <a href="{{ path('livre_edit', {'id': livre.id}) }}">Modifier</a>

    {{ include('livre/_delete_form.html.twig') }}
{% endblock %}
